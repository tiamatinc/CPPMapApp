<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mapwithmarker.SearchActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="374dp"
        android:layout_height="162dp"
        tools:layout_editor_absoluteY="341dp"
        tools:layout_editor_absoluteX="6dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="360dp"
        android:layout_height="34dp"
        android:text="Search for Interesting Places:"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
        android:textSize="24sp"
        tools:layout_editor_absoluteY="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_editor_absoluteX="12dp" />

    <CheckBox
        android:id="@+id/chFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        tools:layout_editor_absoluteY="240dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/chScenic"
        android:layout_alignStart="@+id/btnSearch"
        android:layout_alignEnd="@+id/chScenic" />

    <CheckBox
        android:id="@+id/chSocial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="64dp"
        android:layout_alignBaseline="@+id/chMarket"
        android:layout_alignBottom="@+id/chMarket"
        android:layout_alignStart="@+id/chHousing"
        android:layout_alignEnd="@+id/chHousing" />

    <CheckBox
        android:id="@+id/chMarket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market"
        tools:layout_editor_absoluteX="284dp"
        tools:layout_editor_absoluteY="64dp"
        android:layout_alignBaseline="@+id/chFood"
        android:layout_alignBottom="@+id/chFood"
        android:layout_alignStart="@+id/chResource"
        android:layout_alignEnd="@+id/chResource" />

    <CheckBox
        android:id="@+id/chScenic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scenic"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="138dp"
        android:layout_alignBaseline="@+id/chArt"
        android:layout_alignBottom="@+id/chArt"
        android:layout_alignStart="@+id/chAthletic"
        android:layout_alignEnd="@+id/chAthletic" />

    <CheckBox
        android:id="@+id/chAthletic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Athletic"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="138dp"
        android:layout_alignBottom="@+id/chResource"
        android:layout_alignEnd="@+id/textView" />

    <CheckBox
        android:id="@+id/chArt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Art"
        tools:layout_editor_absoluteX="284dp"
        tools:layout_editor_absoluteY="138dp"
        android:layout_alignTop="@+id/chHousing"
        android:layout_alignStart="@+id/chMarket"
        android:layout_alignEnd="@+id/chResource" />

    <CheckBox
        android:id="@+id/chResource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resource \nCenters"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="218dp"
        android:layout_alignBottom="@+id/chParking"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/chHousing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Housing"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="218dp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/chResource"
        android:layout_alignStart="@+id/chParking" />

    <CheckBox
        android:id="@+id/chParking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parking"
        tools:layout_editor_absoluteX="284dp"
        tools:layout_editor_absoluteY="218dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:id="@+id/txSpecific"
        android:layout_width="238dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="text"
        android:text="Building name, number, etc."
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="276dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Near you:"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="315dp"
        android:layout_above="@+id/map"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:id="@+id/btnSearch"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="94dp"
        android:layout_height="48dp"
        android:background="@android:color/holo_green_light"
        android:text="Search"
        tools:layout_editor_absoluteX="272dp"
        tools:layout_editor_absoluteY="273dp"
        android:layout_above="@+id/map"
        android:layout_alignStart="@+id/chScenic" />

</android.widget.RelativeLayout>
